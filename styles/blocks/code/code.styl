pre {
    padding: 0;
    font-size: 12px;
    line-height: 1.4;

    code {
        white-space: pre-wrap;
    }
}


code,
kbd,
samp {
    :not(pre) > & {
        font-size: 1em;
        white-space: nowrap;
    }
}


/*
 * Code
 */

code {
    color: #007000;

    :not(pre) > & {
        color: #007000;
    }

    .highlight {
        background-color: #eee8d5;
    }
}


.hljs {
    background-color #f4f5f7;
}


/*
 * Keyboard
 */

kbd {
    padding: 1px 5px;
    border-top: 1px solid #f8e8bb;
    border-right: 2px solid #c9af6f;
    border-bottom: 2px solid #d5bb7e;
    border-left: 1px solid #ede2c9;
    background-color: #fdf6e3;
    color: #007000;
    text-shadow: -1px -1px 0px #fff;

    :not(pre) > & {
        color: #007000;
    }
}


/*
 * Code output
 */

samp {
    color: #aa0033;

    :not(pre) > & {
        color: #aa0033;
    }
}
