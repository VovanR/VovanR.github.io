        != getBlock('styles').add(site.styles).toHTML()

        script(src="/js/libs/modernizr/modernizr.js")

    body
        header.header
            .uk-flex.uk-flex-middle
                .uk-width-1-3
                    if document.url === '/'
                        h1.logo
                            span.logo__text
                                != site.author
                            span.logo__description
                                != site.description
                    else
                        .logo
                            a.logo__text(href='/')
                                != site.author
                            span.logo__description
                                != site.description

                .uk-width-1-3
                    span.logo__image.logo__image_size_64

                .uk-width-1-3
                    nav.nav.header__nav
                        .nav__item
                            if document.url !== '/services'
                                a.nav__link(href='/services')
                                    | Сервисы
                            else
                                | Сервисы
                        .nav__item
                            a.nav__link(href='http://vovanr.github.io/notes/' target='_blank')
                                | Заметки

        .content
            != content

        footer.footer
            .legal.uk-grid
                .uk-width-1-2
                    .legal__copyright
                        | ©&nbsp;#{site.author}, #{(new Date).getFullYear()}

                .uk-width-1-2
                    .legal__social
                        each item in site.socialLinks
                            a(href= item.url)
                                != item.name

                    .legal__license
                        | Блог&nbsp;работает&nbsp;на&nbsp;<a href='http://docpad.org'>DocPad</a>, хостится&nbsp;на&nbsp;<a href='https://pages.github.com/'>GitHub&nbsp;Pages</a>

