doctype html
html(lang='ru')
    head
        title= pageTitle()
        meta(charset='utf-8')
        meta(http-equiv='X-UA-Compatible', content='IE=edge')

        meta(name='viewport', content='width=device-width, initial-scale=1')

        meta(name='twitter:card', content='summary')
        meta(name='twitter:site', content= site.twitter)
        meta(name='twitter:creator', content= site.twitter)

        if document.url === '/'
            meta(name='description', content= site.description)

        //- http://realfavicongenerator.net
        link(rel="apple-touch-icon", sizes="57x57", href="/apple-touch-icon-57x57.png")
        link(rel="apple-touch-icon", sizes="114x114", href="/apple-touch-icon-114x114.png")
        link(rel="apple-touch-icon", sizes="72x72", href="/apple-touch-icon-72x72.png")
        link(rel="apple-touch-icon", sizes="144x144", href="/apple-touch-icon-144x144.png")
        link(rel="apple-touch-icon", sizes="60x60", href="/apple-touch-icon-60x60.png")
        link(rel="apple-touch-icon", sizes="120x120", href="/apple-touch-icon-120x120.png")
        link(rel="apple-touch-icon", sizes="76x76", href="/apple-touch-icon-76x76.png")
        link(rel="apple-touch-icon", sizes="152x152", href="/apple-touch-icon-152x152.png")
        link(rel="apple-touch-icon", sizes="180x180", href="/apple-touch-icon-180x180.png")
        link(rel="icon", type="image/png", href="/favicon-192x192.png", sizes="192x192")
        link(rel="icon", type="image/png", href="/favicon-160x160.png", sizes="160x160")
        link(rel="icon", type="image/png", href="/favicon-96x96.png", sizes="96x96")
        link(rel="icon", type="image/png", href="/favicon-32x32.png", sizes="32x32")
        link(rel="icon", type="image/png", href="/favicon-16x16.png", sizes="16x16")
        meta(name="msapplication-TileColor", content="#da532c")
        meta(name="msapplication-TileImage", content="/mstile-144x144.png")

        //- http://updates.html5rocks.com/2014/11/Support-for-theme-color-in-Chrome-39-for-Android
        meta(name="theme-color", content="#154489")

        != getBlock('styles').add(site.styles).toHTML()

        script(src="/js/libs/modernizr/modernizr.js")

    body
        header.b-header
            if document.url === '/'
                h1.b-logo
                    span.b-logo__text
                        != site.author
                    span.b-logo__description
                        != site.description
            else
                .b-logo
                    a.b-logo__text(href='/')
                        != site.author
                    span.b-logo__description
                        != site.description

        .b-content
            != content

        footer.b-footer
            .b-legal.uk-grid
                .uk-width-1-2
                    p.b-legal-copyright
                        | ©&nbsp;<a href='#{site.copyrightUrl}'>#{site.author}</a>, #{(new Date).getFullYear()}

                .uk-width-1-2
                    p.b-legal-license
                        | Работает&nbsp;на&nbsp;<a href='http://docpad.org'>DocPad</a>, хостится&nbsp;на&nbsp;<a href='https://pages.github.com/'>GitHub&nbsp;Pages</a>

