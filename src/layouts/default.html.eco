<!doctype html>
<html lang="ru">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title><%= @pageTitle() %></title>

    <% if @document.url is '/': %>
        <meta name="description" content="<%= @site.description %>">
    <% end %>

    <meta name="viewport" content="width=device-width, initial-scale=1">

    <meta name="twitter:card" content="summary">
    <meta name="twitter:site" content="<%= @site.twitter %>">
    <meta name="twitter:creator" content="<%= @site.twitter %>">

    <!-- Place favicon.ico and apple-touch-icon(s) in the root directory -->

    <%- @getBlock('styles').add(@site.styles).toHTML() %>
</head>
<body>

<header class="b-header">
    <% if @document.url is '/': %>
        <h1 class="b-logo">
            <span class="b-logo__text">
                <%= @site.author %>
            </span>
            <span class="b-logo__description">
                <%= @site.description %>
            </span>
        </h1>
    <% else: %>
        <div class="b-logo">
            <a href="/" class="b-logo__text">
                <%= @site.author %>
            </a>
            <span class="b-logo__description">
                <%= @site.description %>
            </span>
        </div>
    <% end %>
</header>

<div class="content">
    <%- @content %>
</div>

<footer class="b-footer">
    <div class="b-legal pure-g">
        <div class="pure-u-1-2">
            <p class="b-legal-copyright">
                © <a href="<%= @site.copyrightUrl %>"><%= @site.author %></a>, <%= (new Date).getFullYear() %>
            </p>
        </div>

        <div class="pure-u-1-2">
            <p class="b-legal-license">
                Работает на <a href="http://docpad.org">DocPad</a>, хостится на <a href="https://pages.github.com/">GitHub Pages</a>
            </p>
        </div>
    </div>
</footer>

