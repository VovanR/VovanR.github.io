<!doctype html>
<html lang="ru">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title><%= @document.title %></title>
    <meta name="description" content="<%= @document.description %>">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Place favicon.ico and apple-touch-icon(s) in the root directory -->

    <link rel="stylesheet" href="/vendor/normalize-css/normalize.css">
    <link rel="stylesheet" href="/vendor/pure/pure.css">
    <link rel="stylesheet" href="/styles/pure-layout-side-menu/css/layouts/side-menu.css">
    <link rel="stylesheet" href="/styles/hljs/solarized_light.css">
    <link rel="stylesheet" href="/styles/style.css">
</head>
<body>

<header class="header">
    <% if @document.url is '/': %>
        <h1 class="logo">
            <span class="logo__text">
                <%= @site.title %>
            </span>
        </h1>
    <% else: %>
        <h2 class="logo">
            <a href="/" class="logo__text"><%= @site.title %></a>
        </h2>
    <% end %>
</header>

<%- @content %>

<footer class="footer">
    <div class="legal pure-g">
        <div class="pure-u-1-2">
            <p class="legal-copyright">
                © <a href="<%= @site.copyrightUrl %>"><%= @site.author %></a>, <%= (new Date).getFullYear() %>
            </p>
        </div>

        <div class="pure-u-1-2">
            <p class="legal-license">
                Работает на <a href="http://docpad.org">DocPad</a>, хостится на <a href="https://pages.github.com/">GitHub Pages</a>
            </p>
        </div>
    </div>
</footer>

</body>
</html>
