/*
 * Page header
 */

.b-header {
    position: relative;
    margin: 0 auto;
    margin-bottom: 50px;
    padding: 1.5em 2em;
    max-width: 800px;
    border-bottom: 1px solid #eee;
    color: #333;
}


.b-logo {
    margin: 0;
    font-weight: 300;
    font-size: 1em;
    line-height: 1.1;

    &__text {
        display: inline-block;
        border: none;
        color: #333;
        text-decoration: none;
        font-size: 1.5em;
    }

    &__description {
        display: block;
        color: #333;
        text-decoration: none;
        font-size: 1em;
    }
}


.b-google-plusone {
    position: absolute;
    top: 50%;
    right: 0;
    margin-top: -12px;
    height: 24px;
}
