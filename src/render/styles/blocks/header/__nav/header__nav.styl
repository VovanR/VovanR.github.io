.header__nav {
    width: 33.333%;

    .nav {
        float: right;
    }

    .nav__item {
    }

    .nav__link {
        display: inline-block;
    }
}

@media (max-width: 420px) {
    .header__nav {
        width: 100%;
        margin-top: 10px;

        .nav {
            float: none;
            overflow: hidden;
            margin-left: -5px;
        }

        .nav__item {
            float: left;
            padding-right: 5px;
            padding-left: 5px;
        }

        .nav__link {
            padding-right: 5px;
            padding-left: 5px;
            margin-right: -5px;
            margin-left: -5px;
        }
    }
}
