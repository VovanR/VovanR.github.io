}


.b-short-post {
    margin-bottom: 1.5em;

    &__title {
        position: relative;
        margin: 0 0 0.15em;
        font-weight: 300;
        font-size: 1.25em;
        color #333;
    }

    &__meta {
        line-height: 1.2;
    }

    &__date {
        text-transform: uppercase;
        letter-spacing: 0.12em;
        font-size: 0.6em;
    }
}
